<h1>My Tasks</h1>
<ul>

<% @tasks.each do |task| %>
  <li><%= link_to task.title, show_path(task)%></li>
  <li><%= link_to "edit", edit_path(task) %> <%= link_to "delete", delete_path(task), method: :delete, data: {confirm: " are you sure?"} %></li>

<% end %>
</ul>

